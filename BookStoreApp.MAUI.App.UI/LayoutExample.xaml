<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookStoreApp.MAUI.App.UI.LayoutExample"
             Title="LayoutExample">
    
    <VerticalStackLayout x:Name="VStackLayout" Padding="{OnPlatform iOS='30, 30, 30, 30', Default='40'}" BackgroundColor="{OnPlatform iOS=Green}">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Grid ColumnDefinitions="Auto, 100, Auto">
            <Button Grid.Column="0" Text="Test Button" WidthRequest="130" />
            <Button Grid.Column="2" Text="Test Button 2" WidthRequest="130" />
        </Grid>

    </VerticalStackLayout>

</ContentPage>